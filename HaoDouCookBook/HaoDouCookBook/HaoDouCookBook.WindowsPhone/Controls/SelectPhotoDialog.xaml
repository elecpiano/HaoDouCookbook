<ContentDialog
    x:Class="HaoDouCookBook.Controls.SelectPhotoDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HaoDouCookBook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="选择照片"
    FullSizeDesired="False"
    VerticalAlignment="Center" Height="289.812">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border BorderBrush="Green" BorderThickness="1" CornerRadius="7">
            <TextBlock Text="拍照上传" FontSize="24" TextAlignment="Center" Margin="8"/>
        </Border> 
        <Border BorderBrush="Green" BorderThickness="1" CornerRadius="7" Margin="0, 15" Tapped="FromPicturesLibraty_Tapped">
            <TextBlock Text="从相册中选择上传" FontSize="24" TextAlignment="Center" Margin="8"/>
        </Border> 
        <Border Tapped="Canncel_Tapped" BorderBrush="Gray" Background="#10000000" BorderThickness="1" CornerRadius="7" Margin="0, 0, 0, 15">
            <TextBlock Text="取     消" Foreground="Gray" FontSize="24" TextAlignment="Center" Margin="8"/>
        </Border> 
    </StackPanel>
        
</ContentDialog>
