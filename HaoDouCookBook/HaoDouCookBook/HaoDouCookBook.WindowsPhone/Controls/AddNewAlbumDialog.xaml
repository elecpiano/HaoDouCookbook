<ContentDialog
    x:Class="HaoDouCookBook.Controls.AddNewAlbumDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HaoDouCookBook.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:HaoDouCookBook.Controls" Background="#98000000"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid VerticalAlignment="Center" Margin="-20, 40, -20, 0">
        <StackPanel HorizontalAlignment="Center" Margin="0, 150, 0, 0" VerticalAlignment="Center" Orientation="Vertical" Background="White">
            <TextBlock Text="请在文本框中输入内容:" Margin="15, 20, 0, 20" Foreground="Gray" FontSize="17"/>
            <TextBox x:Name="textbox" PlaceholderText="输入分类的名字" Width="350" HorizontalAlignment="Left" Style="{StaticResource TextBoxBase}" Margin="25, 0"/>
            <Image Source="../assets/images/textBoxGreenLine.png" Stretch="Uniform" HorizontalAlignment="Left" Margin="25, 0"/>
            <Button Content="确定" Margin="15, 15, 0, 0" Width="360" FontWeight="Normal" HorizontalAlignment="Left" Click="OK_Click"/>
            <Button Content="取消" Margin="15, 0, 0, 20" Width="360" HorizontalAlignment="Left" FontWeight="Normal" Click="Canncel_click"/>
        </StackPanel>
        <controls:Toast x:Name="toast" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</ContentDialog>
