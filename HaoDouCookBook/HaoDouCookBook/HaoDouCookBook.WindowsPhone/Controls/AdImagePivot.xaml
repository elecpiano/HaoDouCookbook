            </Border>
            <Border Width="380">
                <Border.Background>
                    <ImageBrush ImageSource="../assets/images/DefaultTopicImage.jpg"/>
                </Border.Background>
            </Border>
            <Border Width="380">
                <Border.Background>
                    <ImageBrush ImageSource="../assets/images/DefaultTopicImage.jpg"/>
                </Border.Background>
            </Border>
            <Border Width="380">
                <Border.Background>
                    <ImageBrush ImageSource="../assets/images/DefaultTopicImage.jpg"/>
                </Border.Background>
            </Border>
            <Border Width="380">
                <Border.Background>
                    <ImageBrush ImageSource="../assets/images/DefaultTopicImage.jpg"/>
                </Border.Background>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
