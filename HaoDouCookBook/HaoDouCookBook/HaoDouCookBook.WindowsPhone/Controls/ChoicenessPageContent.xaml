<UserControl
    x:Class="HaoDouCookBook.Controls.ChoicenessPageContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HaoDouCookBook.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:HaoDouCookBook.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ScrollViewer>
        <StackPanel Orientation="Vertical">

            <controls:UserPhoto Width="200" Height="200"/>
            <Border Height="200"/>
            <!--榜单-->
            <StackPanel Orientation="Vertical">
                <Grid>
                    <controls:CategoryTitle Title="榜单" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="rankListMore" Text="更多榜单" HorizontalAlignment="Right" Style="{StaticResource CategoryTitleStyle}" Foreground="#87000000" Tapped="rankListMore_Tapped"/>
                </Grid>
                <ItemsControl x:Name="rankList" Margin="0, 0, 0, 30">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:TopicTile TileType="TileAndPreviewContentWrap" 
                                               TopicPreviewImageSource="{Binding TopicPreviewImageSource}"  
                                               Title="{Binding Title}"
                                               PreviewContent="{Binding PreviewContent}"
                                               HorizontalAlignment="Left" Margin="0, 30, 0, 0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </StackPanel>

    </ScrollViewer>
</UserControl>
