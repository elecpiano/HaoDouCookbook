                                    <TextBlock Text="赞" FontWeight="Normal" Margin="0, 2, 0, 0"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Margin="10, 0, 0, 0">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="../assets/images/myPage/more.png" Width="24" Height="24" VerticalAlignment="Top" Margin="0, 0, 5, 0"/>
